{% extends 'base.html.twig' %}

{% block title %}Colliseum{% endblock %}

{% block body %}
<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
			Profil</h1>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
                        <ul class="list-group mt-4 mb-5">
                            <li class="list-group-item">
                            <strong>Nom :</strong>
                            {{app.user.nom}}</li>
                            <li class="list-group-item">
                            <strong>Prénom :</strong>
                            {{app.user.prenom}}</li>
                            <li class="list-group-item">
                            <strong>E-mail :</strong>
                            {{app.user.email}}</li>
                            <li class="list-group-item">
                            <strong>Date d'inscription :</strong>
                            {{app.user.dateInscriptions|date("d-m-Y")}}</li>
                            <li class="list-group-item">                           
                            <strong>Role :</strong>
                            {% if 'ROLE_ADMIN' in app.user.roles %}
                                <span class="badge bg-success">Adminisrateur</span>
                            {% elseif 'ROLE_MODERATOR' in app.user.roles %}
                                <span class="badge bg-warning">Modérateur</span>
                            {% else %}
                                <span class="badge bg-primary">Utilisateur</span>
                            {% endif %}
                           <div class="text-center">
                                <a class="btn btn-lg btn-primary mt-4" href="{{ path('app_logout') }}">
                                   Déconnexion
                                </a>
                            </div>
                        </tr>
                    </thread>
                </div>
            </div>
        </div>
    </div>
{% endblock %}