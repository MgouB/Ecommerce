<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Colliseum -
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link href="{{ asset('style.css?v=1.0') }}" rel="stylesheet">
			<link href="https://bootswatch.com/5/slate/bootstrap.min.css" rel="stylesheet">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
		{% endblock %}
	</head>
		<nav class="navbar navbar-expand-lg --bs-body-bg" data-bs-theme="dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('app_accueil') }}">Colliseum</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarColor03">
					<ul class="navbar-nav me-auto">
					
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_nouveautes') }}">Nouveautés</a>
						</li>
						{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MOD') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_utilisateurs') }}">Utilisateurs</a>
							</li>
						{% endif %}
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Produit</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="{{ path('app_liste_produit') }}">Liste</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_ajout_produit') }}">Ajout de Produits</a>
								</li>
								<li><hr class="dropdown-divider"></li>
							</ul>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Catégorie</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="{{ path('app_ajout_categorie') }}">Ajouts</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_liste_categories') }}">Liste</a>
								</li>
								<li><hr class="dropdown-divider"></li>
							</ul>
						</li>
					</ul>
					<div class="search-container">
						<input type="text" placeholder="Recherchez un produit..." class="search-input">
					</div>
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<div class="nav-icons d-flex align-items-center">
							<a href="{{ path('app_favoris') }}" class="icon-link">
								<i class="fas fa-heart{{ app.user.produits|length > 0 ? '-fill text-danger' : '' }}"></i>
								{% if app.user.produits|length > 0 %}
									<span class="badge badge-danger">{{ app.user.produits|length }}</span>
								{% endif %}
							</a>
						</div>
					{% endif %}
					{% set total = 0 %}
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						{% if app.user.panier %}
							{% for ajouter in app.user.panier.ajouters %}
								{% set total = total + ajouter.qte %}
							{% endfor %}
						{% endif %}
					{% endif %}
					<a href="{{ path('app_panier') }}" class="icon-link">
						<i class="fas fa-shopping-cart"></i>
					</a>
					<ul class="navbar-nav me-auto">
						{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="icon-link" href="{{ path('app_profil') }}">
									<i class="fas bi bi-person-circle"></i>
								</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>

		{% for message in app.flashes('notice') %}
			<h2 class="alert alert-warning text-center mt-4 mb-4" role="alert">{{ message }}</h2>
		{% endfor %}

		{% block body %}
		{% endblock %}

</br></br>
</br>
</br>
</br>
</br>
</br>
</br>


		<footer class="footer">
			<style>
				.footer {
					background-color: #1C1C1C;
					color: white;
					padding: 5px 0;
					text-align: center;
					position: fixed;
					bottom: 0;
					width: 100%;
				}
				.footer a {
					color: #007bff;
					text-decoration: none;
					margin: 0 15px;
				}
				.footer a:hover {
					text-decoration: underline;
				}
				.footer p {
					margin: 0;
					font-size: 14px;
				}
			</style>
			<div class="container">
				<p>2025 colliseum - tous droits réservés</p>
				<p>
					<a href="{{ path('app_mentionslegale') }}">Mentions légales</a>
					<a href="{{ path('app_apropos') }}">À propos</a>
					<a href="#">Politique de Confidentialité</a>
				</p>
				<p>
					<a href="#">
						<i class="bi bi-twitter ms-3"></i>
					</a>
					<a href="#">
						<i class="bi bi-instagram ms-3"></i>
					</a>
				</p>
			</div>
		</footer>

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
		{% endblock %}
	</body>
</html>
