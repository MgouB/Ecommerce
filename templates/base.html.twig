<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Colliseum
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('images/logo/logo.png') }}" type="image/png">
	</head>

	{% block stylesheets %}
		<link href="{{ asset('style.css?v=1.0') }}" rel="stylesheet">
		<link href="https://bootswatch.com/5/slate/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
	{% endblock %}
</html></head><nav class="navbar navbar-expand-lg --bs-body-bg" data-bs-theme="dark">
<div class="container-fluid">
	<a class="navbar-brand" href="{{ path('app_accueil') }}">
		<img src="{{asset('images/logo/logo_texte.png')}}" style="max-height:75px;" alt="logo Colliseum"></a>
	<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarColor03">
		<ul class="navbar-nav me-auto">
			<li class="nav-item dropdown ">
				{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MOD') %}
					<a class="nav-link dropdown-toggle text-white " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Administration</a>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" href="{{ path('app_ajout_categorie') }}">Ajouts Catégorie</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('app_liste_categories') }}">Liste Catégorie</a>
						</li>
						<li><hr class="dropdown-divider"></li>
						<li>
							<a class="dropdown-item" href="{{ path('app_liste_produit') }}">Liste Produits</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('app_ajout_produit') }}">Ajouts Produits</a>
						</li>
						<li><hr class="dropdown-divider"></li>
						<li>
							<a class="dropdown-item" href="{{ path('app_liste_marque') }}">Liste Marque</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('app_ajout_marque') }}">Ajouts Marque</a>
						</li>
						<li><hr class="dropdown-divider"></li>

						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_liste_users') }}">Utilisateurs</a>
						</li>

					</ul>
				{% endif %}
				<li class="nav-item">
					<a class="nav-link text-white" href="{{path("app_produits")}}">Produits</a>
				</li>
			</li>
		</ul>
		<form method="GET" action="{{ path('app_recherche') }}">
			<input type="search" name="q" class="form-control form-control-lg bg-dark text-white border-secondary rounded-pill" placeholder="Recherchez un produit...">
		</form>
		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			<div class="nav-icons d-flex ">
				<a href="{{ path('app_favoris') }}" class="icon-link d-flex">
					<i class="fas fa-heart{{ app.user.produits|length > 0 ? '-fill text-danger' : '' }}"></i>
					{% if app.user.produits|length > 0 %}
						<span class="badge badge-danger">{{ app.user.produits|length }}</span>
					{% endif %}
				</a>
			</div>
		{% endif %}
		{% set total = 0 %}
		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			{% if app.user.panier %}
				{% for ajouter in app.user.panier.ajouters %}
					{% set total = total + ajouter.qte %}
				{% endfor %}
			{% endif %}
		{% endif %}
		<ul class="navbar-nav ">
			{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
				<li class="nav-item">
					<a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
				</li>
			{% else %}
				<li class="nav-item">
					<a class="icon-link" href="{{ path('app_profil') }}">
						<i class="fas bi bi-person-circle"></i>
					</a>
				</li>
			{% endif %}
			<li class="nav-item d-flex">
				<a href="{{ path('app_panier') }}" class="icon-link">
					<i class="fas fa-shopping-cart"></i>
				</a>
			</li>
		</ul>
	</div>
</div></nav>{% for message in app.flashes('notice') %}
<h2 class="alert alert-warning text-center mt-4 mb-4" role="alert">{{ message }}</h2>{% endfor %}{% block body %}{% endblock %}</html></br></br></br></br></br></br></br> </br> <footer class="footer"><style>.footer {
	background-color: #1C1C1C;
	color: white;
	padding: 5px 0;
	text-align: center;
	position: fixed;
	bottom: 0;
	width: 100%;
}
.footer a {
	color: #007bff;
	text-decoration: none;
	margin: 0 15px;
}
.footer a:hover {
	text-decoration: underline;
}
.footer p {
	margin: 0;
	font-size: 14px;
}</style><div class="container"><p>2025 colliseum - tous droits réservés</p><p><a href="{{ path('app_mentionslegale') }}">Mentions légales</a><a href="{{ path('app_apropos') }}">À propos</a><a href="#">Politique de Confidentialité</a></p><p><a href="#"><i class="bi bi-twitter ms-3"></i></a><a href="#"><i class="bi bi-instagram ms-3"></i></a></p></div> </footer> {% block javascripts %}<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script> {% endblock %}</body></html>
