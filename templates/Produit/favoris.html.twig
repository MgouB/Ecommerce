{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }}Produits Favoris
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}
{% block body %}
<div class="container-fluid py-4">
    <h1 class="text-center text-white mt-3 mb-4 fw-bold display-4">Produits Favoris</h1>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="row">
                <div class="col-12 col-md-8 mb-4">
                    {% if produits|length > 0 %}
                        {% for produit in produits %}
                            <div class="card mb-3 border-0 shadow-sm">
                                <div class="card-body d-flex align-items-center flex-column flex-md-row">
                                    {% if produit.image %}
                                        {% set nom = 'images/' ~ produit.image %}
                                        <img src="{{ asset(nom) }}" class="img-fluid me-md-3 mb-3 mb-md-0" style="width: 120px; height: auto;" alt="Image de {{ produit.nom }}">
                                    {% else %}
                                        <img src="{{ asset('images/default.jpg') }}" class="img-fluid me-md-3 mb-3 mb-md-0" style="width: 120px; height: auto;" alt="Image par défaut">
                                    {% endif %}
                                    <div class="flex-grow-1">
                                        <h5 class="card-title mb-1 fw-bold">{{ produit.nom }}</h5>
                                        <div class="d-flex align-items-center flex-wrap">
                                            </br>
                                            <form action="{{ path('app_favoris_remove', {'id': produit.id}) }}" method="post" class="mb-2">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                                <button type="submit" class="btn btn-link p-0" title="Supprimer des favoris">
                                                    <i class="bi bi-heart-fill text-danger text center"></i>
                                                </button>
                                            </form>
                                        </div>
                                        <p class="card-text fw-bold mt-2">
                                            {{ produit.prix }}€
                                        </p>
                                        <div class="d-flex justify-content-center align-items-center">
						<a href="{{ path('app_ajout_panier',{'id':produit.id}) }}" class="d-flex justify-content-center align-items-center">
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<i class="bi bi-cart center"></i>
							{% endif %}
						</a>
					</div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="card border-0 shadow-sm mx-center">
                            <div class="card-body text-center">
                                <p class="text-muted">Votre liste de favoris est vide.</p>
                                <a href="{{ path('app_accueil') }}" class="btn btn-outline-white">Continuer vos achats</a>
                            </div>
                        </div>
                    {% endif %}
                </div>

                {% if produits|length > 0 %}
                    <div class="col-12 col-md-4">
                        <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                            <div class="card-body">
                                <h4 class="card-title fw-bold mb-4">Résumé des Favoris</h4>
                                <div class="d-flex justify-content-between mb-3">
                                    <span>Nombre d'articles</span>
                                    <span>{{ produits|length }}</span>
                                </div>
                                <a class="btn btn-dark btn-lg w-100 rounded-0" href="{{ path('app_accueil') }}">Continuer vos achats</a>
                                <a class="btn btn-dark btn-lg w-100 rounded-0" href="{{ path('app_panier') }}">Ajouter au panier</a>
                                <a class="btn btn-dark btn-lg w-100 rounded-0" href="{{ path('app_panier') }}">Aller au panier</a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}