{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}Produits Favoris
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-10 text-primary"> 
	            <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
		            Produits Favoris</h1>

                {% if produits|length > 0 %}
                    <ul>
                        {% for produit in produits %}
                            <li>
                                <h2>{{ produit.nom }}</h2>
                                <p>{{ produit.prix }}</p>
                                {% if produit.image %}
                                    <img src="{{ asset('images/' ~ produit.image ) }}" class="card-img-top" alt="{{ produit.nom }}">
                                {% else %}
                                    <img src="{{ asset('images') }}" class="card-img-top" alt="Image par dÃ©fault">
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
{% endblock %}